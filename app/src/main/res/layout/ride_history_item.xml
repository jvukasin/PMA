<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:columnCount="2"
    android:rowCount="1"
    android:alignmentMode="alignMargins"
    android:columnOrderPreserved="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_column="0"
        android:background="@color/colorPrimaryDark"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="@color/colorGhostWhite"
            android:text="@string/startDateLabel"
            />
        <TextView
            android:id="@+id/startDate"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="20dp">
        </TextView>

        <TextView
            android:textColor="@color/colorGhostWhite"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="@string/endDateLabel"
            />
        <TextView
            android:id="@+id/endDate"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="20dp">
        </TextView>

        <TextView
            android:textColor="@color/colorGhostWhite"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="@string/distanceLabel"
            />
        <TextView
            android:id="@+id/distance"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="20dp">
        </TextView>

        <TextView
            android:textColor="@color/colorGhostWhite"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="@string/priceLabel"
            />
        <TextView
            android:id="@+id/price"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="20dp">
        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_column="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/points"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:background="@drawable/points_border"></TextView>
    </LinearLayout>


</GridLayout>
