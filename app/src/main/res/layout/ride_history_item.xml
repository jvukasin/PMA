<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ride_history_item_background"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="@color/colorGhostWhite"
            android:text="@string/startDateLabel"
            />
        <TextView
            android:fontFamily="sans-serif-black"
            android:id="@+id/startDate"
            android:textColor="@color/colorMenuText"
            android:layout_width="match_parent"
            android:layout_height="20dp">
        </TextView>

        <TextView
            android:textColor="@color/colorGhostWhite"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="@string/endDateLabel"
            />
        <TextView
            android:fontFamily="sans-serif-black"
            android:id="@+id/endDate"
            android:textColor="@color/colorMenuText"
            android:layout_width="match_parent"
            android:layout_height="20dp">
        </TextView>

        <TextView
            android:textColor="@color/colorGhostWhite"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="@string/distanceLabel"
            />
        <TextView
            android:fontFamily="sans-serif-black"
            android:id="@+id/distance"
            android:textColor="@color/colorMenuText"
            android:layout_width="match_parent"
            android:layout_height="20dp">
        </TextView>

        <TextView
            android:textColor="@color/colorGhostWhite"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="@string/priceLabel"
            />
        <TextView
            android:fontFamily="sans-serif-black"
            android:id="@+id/price"
            android:textColor="@color/colorMenuText"
            android:layout_width="match_parent"
            android:layout_height="20dp">
        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/points_border"
        android:gravity="bottom|center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/points"
            android:layout_weight="0"
            android:textColor="@color/colorMenuText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center">
        </TextView>
    </LinearLayout>


</LinearLayout>
